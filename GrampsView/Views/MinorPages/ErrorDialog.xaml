<?xml version="1.0" encoding="utf-8" ?>
<!--  Content  -->
<Grid
    x:Class="GrampsView.Views.ErrorDialog"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:GrampsView.Common"
    xmlns:prism="http://prismlibrary.com"
    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkSurfaceColor},
                                      Light={StaticResource LightSurfaceColor}}">
    <!--
        prism:ViewModelLocator.AutowireViewModel="True"
        prism:DialogLayout.RelativeWidthRequest="{OnIdiom Default=0.75,
        Desktop=0.5}"
    -->

    <ScrollView>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="20,0,20,10"
                BackgroundColor="Red"
                HorizontalOptions="CenterAndExpand"
                Style="{DynamicResource GVCardLabelStyleSmall}"
                Text="{Binding AdaArgs.Name, Mode=OneWay}"
                TextColor="{AppThemeBinding Dark={StaticResource DarkOnSurfaceColor},
                                            Light={StaticResource LightOnSurfaceColor}}" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,5"
                BackgroundColor="LightSalmon"
                Text="{Binding AdaArgs.Text, Mode=OneWay}"
                TextColor="{AppThemeBinding Dark={StaticResource DarkOnSurfaceColor},
                                            Light={StaticResource LightOnSurfaceColor}}" />
            <StackLayout
                Grid.Row="2"
                Grid.Column="0"
                Margin="20,0,20,10"
                BindableLayout.ItemsSource="{Binding AdaArgs.ItemDetails, Mode=OneWay}">
                <BindableLayout.ItemTemplate>

                    <DataTemplate>
                        <Grid BackgroundColor="NavajoWhite">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="{Binding Key}"
                                TextColor="{AppThemeBinding Dark={StaticResource DarkOnSurfaceColor},
                                                            Light={StaticResource LightOnSurfaceColor}}" />

                            <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="{Binding Value}"
                                TextColor="{AppThemeBinding Dark={StaticResource DarkOnSurfaceColor},
                                                            Light={StaticResource LightOnSurfaceColor}}" />
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Command="{Binding CloseCommand}"
                Style="{DynamicResource GVButtonMenu}"
                Text="{i18n:Translate ErrorDialog_Ok}" />
        </Grid>
    </ScrollView>
</Grid>